
{% extends "../base.njk" %}

{% block titol %}Pel·lícules | Llistat{% endblock %}

{% block contingut %}

 <h1>Llistat de pel·lícules</h1>

    <div class="list-group">
        {% for movie in movies %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a class="btn list-group-item-action" href="/movies/detall/{{ movie._id }}"> {{ movie.title }}</a>

            <a href="/movies/editar/{{ movie._id }}"><button class="btn btn-warning">Editar</button></a>
            <form action="/movies/delete/{{movie._id}}" method="post">
                <button class="btn btn-danger">Esborrar</button>
            </form>

        </li>
        {% endfor %}
    </div>

{% endblock %}